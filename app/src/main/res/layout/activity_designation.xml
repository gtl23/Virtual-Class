<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/designation"
        tools:context="com.sandfoil.virtualclass.Designation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are:"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/selectDesignationRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <RadioButton
                android:id="@+id/selectDesignationStudentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Student"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:background="@drawable/capsule" />

            <RadioButton
                android:id="@+id/selectDesignationParentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Parent"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:background="@drawable/capsule" />

            <RadioButton
                android:id="@+id/selectDesignationFacultyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Faculty"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:background="@drawable/capsule" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_red_light"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:drawableRight="@drawable/authentication_proceed_button_icon"
            android:paddingRight="16dp"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:onClick="openAuthenticationActivity"
            android:background="@drawable/capsule"
            android:layout_marginBottom="16dp"/>

</LinearLayout>