<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#BCAAA4"
    tools:context="com.sandfoil.virtualclass.CreateFacultyProfile">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/create_account"
        android:alpha="0.1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/create_profile_faculty_phone_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty Phone Number"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="28dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginBottom="32dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_profile_faculty_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/create_profile_faculty_department_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">
        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginBottom="32dp"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_profile_faculty_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/create_profile_faculty_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:drawableRight="@drawable/create_profile_button_icon"
            android:paddingRight="16dp"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:background="@drawable/capsule"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
